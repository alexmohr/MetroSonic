<UserControl x:Class="MetroSonic.Content.Welcome.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Login" Style="{StaticResource Title}" />
                <TextBlock Text="Trying to log in..." Margin="0,40,0,0" Name="LabelStatus" x:FieldModifier="private" />
                <ProgressBar Height="20" Margin="0,20,10,80" Width="200" IsIndeterminate="True"
                             HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>